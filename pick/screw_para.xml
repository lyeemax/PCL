    <!--<segThetaThresholdInDegree>10</segThetaThresholdInDegree>//法向量角度阈值-->
    <!--<segNeighborNumber>7</segNeighborNumber>//每次查询的点的个数-->
    <!--<segMaxDis>4</segMaxDis>//距离分割的阈值-->



